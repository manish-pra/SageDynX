<?xml version="1.0"?>
<robot name="two_dof_robot">

  <!-- Base link -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.2 0.2 0.05"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="gray">
        <color rgba="0.6 0.6 0.6 1"/>
      </material>
    </visual>
  </link>

  <!-- Link 1 -->
  <link name="link1">
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0.2 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0000521" ixy="0.0" ixz="0.0"
               iyy="0.00069"   iyz="0.0"
               izz="0.00069"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.4 0.05 0.05"/>
      </geometry>
      <origin xyz="0.2 0 0" rpy="0 0 0"/>
      <material name="blue">
        <color rgba="0.2 0.2 1.0 1"/>
      </material>
    </visual>
  </link>

  <!-- Joint 1: base_link -> link1 -->
  <joint name="joint1" type="revolute">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="5.0" velocity="4.0"/>
  </joint>

  <!-- Link 2 -->
  <link name="link2">
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0.15 0 0" rpy="0 0 0"/>
      <inertia ixx="0.000025" ixy="0.0" ixz="0.0"
               iyy="0.0003"   iyz="0.0"
               izz="0.0003"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.3 0.04 0.04"/>
      </geometry>
      <origin xyz="0.15 0 0" rpy="0 0 0"/>
      <material name="green">
        <color rgba="0.2 1.0 0.2 1"/>
      </material>
    </visual>
  </link>

  <!-- Joint 2: link1 -> link2 -->
  <joint name="joint2" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0.4 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="5.0" velocity="4.0"/>
  </joint>

  <joint name="ee_fixed" type="fixed">
  <parent link="link2"/>
  <child link="ee_link"/>
  <origin xyz="0.3 0 0" rpy="0 0 0"/>
  </joint>

<link name="ee_link">
<visual>
    <geometry><sphere radius="0.05"/></geometry>
</visual>
</link>

</robot>